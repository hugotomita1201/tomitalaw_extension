{
  "manifest_version": 3,
  "name": "TomitaLaw AI Extension",
  "version": "1.2.0",
  "description": "Combined auto-fill extension for DS-160 and US Visa Scheduling forms",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://ceac.state.gov/*",
    "https://www.usvisascheduling.com/*",
    "https://ais.usvisa-info.com/*",
    "https://ayobaspremium.jp/*",
    "https://pds.ayobaspremium.jp/*",
    "https://atlasauth.b2clogin.com/*",
    "https://i129-pdf-filler.vercel.app/*",
    "https://i129-backend-452425445497.us-central1.run.app/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://ceac.state.gov/*"],
      "js": [
        "content/modules/ds160-content.js",
        "content/modules/ds160-retrieval-content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.usvisascheduling.com/*",
        "https://ais.usvisa-info.com/*",
        "https://ayobaspremium.jp/*",
        "https://pds.ayobaspremium.jp/*",
        "https://atlasauth.b2clogin.com/*"
      ],
      "js": ["content/modules/visa-content.js"],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://i129-pdf-filler.vercel.app/*",
      "https://i129-backend-452425445497.us-central1.run.app/*"
    ]
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": {
    "default_title": "Open TomitaLaw AI Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "data/photo/requirements.json",
        "data/postal/business-codes.json"
      ],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["scripts/injected.js", "scripts/injected-subordinates.js"],
      "matches": ["https://ceac.state.gov/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.openai.com https://zipcloud.ibsnet.co.jp"
  }
}